#!/bin/sh -e
cd <%= node[:ws][:dir] %>
case "$1" in
  start)
    forever start examples/readme_server.js
    ;;
  stop)
    forever stop examples/readme_server.js
    ;;
  restart)
    forever stop examples/readme_server.js
    forever start examples/readme_server.js
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    exit 1
esac
